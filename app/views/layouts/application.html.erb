<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
    
    <% if logged_in? %>
        <% if current_user.admin? %>
          <li><%= link_to "User list", admin_users_path, id: "user-index"%></li>
          <li><%= link_to "New admin", new_admin_user_path, id: "add-user" %></li>
        <% end %>
        <li><%= link_to t("global.tasks_index"), tasks_path, id: "tasks-index" %></li>
        <li><%= link_to t("global.new_task"), new_task_path, id: "new-task" %></li>
        <li><%= link_to t("global.my_account"), user_path(current_user.id), id: "account-setting" %></li>
        <li><%= link_to t("global.sign_out"), session_path(current_user.id), method: :delete, id: "sign-out" %></li>
      <% else %>
        <li><%= link_to t("global.sign_up"), new_user_path, id: "sign-up" %></li>
        <li><%= link_to t("global.sign_in"), new_session_path, id: "sign-in" %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
